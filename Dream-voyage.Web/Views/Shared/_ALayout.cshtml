<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dream Voyage | @ViewBag.Title</title>
    @Styles.Render("~/bundles/avtorizatia/css")
    @Styles.Render("~/bundles/bootstrap/css")
    @Styles.Render("~/bundles/appmincss/css")

    <link rel="shortcut icon" href="~/images/favicon.ico">
</head>
<body style="
    background-image: url(../images/avtorizatia.jpg);">
    @RenderBody()
    <!-- Handler for local scripts -->
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/vendor/js")
    @Scripts.Render("~/bundles/appmin/js")
</body>
</html>
