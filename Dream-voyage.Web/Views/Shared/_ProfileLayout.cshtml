<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dream Voyage | @ViewBag.Title</title>
    @Styles.Render("~/bundles/bootstrap/css")
    @Styles.Render("~/bundles/style/css")
    @Styles.Render("~/bundles/profile/css")


    <link rel="shortcut icon" href="~/images/favicon.ico">
</head>
<body>
    <header>
        <nav class="navbar navbar-default navbar-fixed-top">
            @Html.Partial("_NavigationBar")

        </nav>
    </header>


    @RenderBody()

    <footer class="bg-dark footer text-white">
        @Html.Partial("_Footer")
    </footer>

    @Scripts.Render("~/bundles/jquery/js")
    @Scripts.Render("~/bundles/bootstrap/js")
    @Scripts.Render("~/bundles/all/js")
    @RenderSection("scripts", required: false)
</body>
</html>
